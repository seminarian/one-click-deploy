                          {
                            "kind": "DeploymentService",
                            "spec": {
                              "name": "server-dev",
                              "billing": {
                                "deploymentPlan": "nf-compute-10"
                              },
                              "deployment": {
                                "instances": 1,
                                "docker": {
                                  "configType": "customCommand",
                                  "customCommand": "yarn start:server"
                                },
                                "releaseFlowControlled": false
                              },
                              "ports": [
                                {
                                  "name": "p01",
                                  "internalPort": 3000,
                                  "public": true,
                                  "protocol": "HTTP",
                                  "security": {
                                    "credentials": [],
                                    "policies": []
                                  },
                                  "domains": [],
                                  "disableNfDomain": false
                                }
                              ],
                              "runtimeEnvironment": {}
                            }
                          },
                          {
                            "kind": "DeploymentService",
                            "spec": {
                              "name": "worker-dev",
                              "billing": {
                                "deploymentPlan": "nf-compute-10"
                              },
                              "deployment": {
                                "instances": 1,
                                "docker": {
                                  "configType": "customCommand",
                                  "customCommand": "yarn start:worker"
                                },
                                "releaseFlowControlled": false
                              },
                              "ports": [],
                              "runtimeEnvironment": {}
                            }
                          }
                        ]
                      }
                    },
                    {
                      "kind": "SecretGroup",
                      "spec": {
                        "name": "secrets-dev",
                        "secretType": "environment-arguments",
                        "priority": 10,
                        "secrets": {
                          "variables": {
                            "STAGE": "DEV",
                            "APP_ENV": "production",
                            "COOKIE_SECRET": "${fn.randomSecret(32)}",
                            "SUPERADMIN_USERNAME": "superadmin",
                            "SUPERADMIN_PASSWORD": "superadmin",
                            "DB_SCHEMA": "public",
                            "AWS_BUCKET_NAME": "CHANGE_ME"
                          }
                        },
                        "addonDependencies": [
                          {
                            "addonId": "database-dev",
                            "keys": [
                              {
                                "keyName": "HOST",
                                "aliases": ["DB_HOST"]
                              },
                              {
                                "keyName": "PORT",
                                "aliases": ["DB_PORT"]
                              },
                              {
                                "keyName": "DATABASE",
                                "aliases": ["DB_NAME"]
                              },
                              {
                                "keyName": "USERNAME",
                                "aliases": ["DB_USERNAME"]
                              },
                              {
                                "keyName": "PASSWORD",
                                "aliases": ["DB_PASSWORD"]
                              }
                            ]
                          }
                        ],
