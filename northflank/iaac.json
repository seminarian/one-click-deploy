            "steps": [
              {
                "kind": "Workflow",
                "spec": {
                  "type": "sequential",
                  "steps": [
                    {
                      "kind": "Addon",
                      "spec": {
                        "name": "database-dev",
                        "type": "postgres",
                        "version": "latest",
                        "billing": {
                          "deploymentPlan": "nf-compute-10",
                          "storageClass": "ssd",
                          "storage": 4096,
                          "replicas": 1
                        },
                        "tlsEnabled": false,
                        "externalAccessEnabled": false,
                        "ipPolicies": [],
                        "pitrEnabled": false
                      }
                    },
                    {
                      "kind": "Workflow",
                      "spec": {
                        "type": "parallel",
